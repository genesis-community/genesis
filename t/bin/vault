#!/usr/bin/env bash
set -ue

bail() {
	printf >&2 $*
	exit 2
}

[[ -n "$GENESIS_TOPDIR" ]] || bail "No GENESIS_TOPDIR defined -- cannot start vault"

export HOME="${GENESIS_TOPDIR}/t/tmp/home"
export VAULTS_DIR="${GENESIS_TOPDIR}/t/vaults"
[[ -d $HOME ]] || mkdir -p "$HOME"
[[ -d $VAULTS_DIR ]] || mkdir -p "$VAULTS_DIR"
touch "$HOME/.vault_token"  # Hack around safe init issue
cd "${GENESIS_TOPDIR}" >/dev/null 2>&1

version="${GENESIS_TEST_VAULT_VERSION:-1.0.2}"
platform=
target="${1:-genesis-ci-unit-tests}"
arch=amd64
case $OSTYPE in
(darwin*) platform=darwin ;;
(linux*)  platform=linux  ;;
(*)
	bail "UNRECOGNIZED OSTYPE '$OSTYPE'"
	;;
esac

cmd="${VAULTS_DIR}/vault-${version}-${platform}"

if [[ ! -f "$cmd" ]]; then
	printf >&2 "\rDownloading Vault ${version} CLI for $platform ..."
	curl --fail -sLk > t/tmp/archive.zip \
		https://releases.hashicorp.com/vault/${version}/vault_${version}_${platform}_${arch}.zip \
		|| bail "\nFAILED - could not download of vault ${version}"

	unzip -d t/tmp t/tmp/archive.zip > /dev/null 2>&1
	mv t/tmp/vault "$cmd"
	printf >&2 "DONE\n\n"
fi


port=8200
while lsof -nP -i ":$port" | grep ":$port\s*(LISTEN)" >/dev/null 2>&1 ; do
  [[ $((++port)) -gt 8300 ]] && bail "No free ports available for dev vault server"
done
$cmd server -config <(cat <<EOF
disable_mlock = 1
listener "tcp" {
  address     = "127.0.0.1:$port"
  tls_disable = 1
}
storage "inmem" {}
EOF
) >$HOME/log 2>&1 &
vault_pid=$!
[ -n "${DEBUG_TESTS:-}" ] && printf >&2 "\rStarting Vault ${version} CLI on port $port as '$target' (pid: $vault_pid)..."
waitfor=600
while ! lsof -a -p $vault_pid -i tcp:$port -s TCP:listen -nP >/dev/null 2>&1; do
	if [[ $waitfor -gt 0 ]]; then
		waitfor=$((waitfor - 1))
		sleep 0.1
	else
		bail "\nFAILED - timed out waiting for vault server to start\n"
	fi
done
safe target "$target" http://127.0.0.1:$port --no-strongbox >/dev/null 2>&1
safe auth token <<<"dummy" > /dev/null 2>&1 # Another Hack around safe init issue
root_token=$(safe init --json | jq -r '.root_token')
safe auth token <<<${root_token} >/dev/null 2>&1
if ! safe exists "secret/handshake" ;  then
  bail "\nFAILED - failed to unseal vault\n"
fi

[ -n "${DEBUG_TESTS:-}" ] && printf >&2 "done.\n"
echo $vault_pid
exit 0
